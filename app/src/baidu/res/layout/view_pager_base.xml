<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.chowen.apackage.testkitdemo.bar.Bar
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="48dp"/>


    <RelativeLayout
        android:id="@+id/rl_radio_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/ll_top_bar"
        android:background="@android:color/white"
        android:clickable="true">

        <RadioGroup
            android:id="@+id/rg_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

        </RadioGroup>

        <View
            android:id="@+id/scroll_bar_view"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_red_dark" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/lvp_contribute_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_radio_view"
        android:background="@android:color/white" />

</RelativeLayout>