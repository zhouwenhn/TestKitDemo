<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/iv_scan"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="4dp"
            android:background="@android:color/black"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hapticFeedbackEnabled="true"
            android:text="属性动画1" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="chowen"
            android:textColor="@android:color/background_dark"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_start_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移动属性动画" />

        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="translation"
            android:textColor="@android:color/background_dark"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_start_scaleY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移动属性动画" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:soundEffectsEnabled="true"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_scaleY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="scaleY"
            android:textColor="@android:color/background_dark"
            android:textSize="40dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_start_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移动属性动画" />

        <TextView
            android:id="@+id/tv_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="组合动画"
            android:textColor="@android:color/background_dark"
            android:textSize="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="path"
            android:id="@+id/path"/>

        <Button
            android:id="@+id/btn_start_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rotation属性动画" />

        <Button
            android:id="@+id/btn_start_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="translation属性动画" />

        <ImageView
            android:id="@+id/iv_r"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/btn_start_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="浮动动画" />

        <Button
            android:id="@+id/btn_start_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scale动画" />

        <Button
            android:id="@+id/btn_start_sa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scale+alpha动画" />

        <Button
            android:id="@+id/btn_start_rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="旋转动画" />

        <ImageView
            android:id="@+id/iv_rotation"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/btn_start_o"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            tools:text="任意对象动画" />
        <Button
            android:id="@+id/btn_start_scalex"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="scalex动画" />

        <Button
            android:id="@+id/btn_start_rotate"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="旋转动画" />

        <ImageView
            android:id="@+id/iv_scale"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/btn_scale"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="scale动画" />

    </LinearLayout>
</ScrollView>