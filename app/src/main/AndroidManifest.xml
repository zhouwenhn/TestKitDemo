<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chowen.apackage.testkitdemo">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
     声明一个权限
    <permission
        android:name="android.permission.test_kit"
        android:label="Start My Permission"
        android:protectionLevel="normal" >
    </permission>

    <application
        android:name=".TestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowBackground="@null">

        <activity android:name="com.chowen.apackage.testkitdemo.MainActivity"
            android:exported="true"
            android:permission="android.permission.test_kit">
            <intent-filter>
                <action android:name="dev.intent.action.MAIN_TESTKIT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.MAIN_TESTKIT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.chowen.apackage.testkitdemo.TestService" />

        <activity-alias
            android:name=".Test11"
            android:enabled="false"
            android:icon="@mipmap/tmall"
            android:label="双11"
            android:targetActivity=".SplashActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity-alias>

        <activity-alias
            android:name=".Test12"
            android:enabled="false"
            android:icon="@mipmap/tmall_12"
            android:label="双12"
            android:targetActivity=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <receiver android:name="com.chowen.apackage.testkitdemo.TestReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="action.intent.recevier"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>